{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    // "declaration": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    // "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "__tests__/**/*.ts",
    "node_modules/@types"
  ],
  "exclude": ["node_modules"]
}
